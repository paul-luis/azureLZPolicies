{
 "properties": {
  "displayName": "AppService append enable https only setting to enforce https setting.",
  "policyType": "Custom",
  "mode": "All",
  "description": "Appends the AppService sites object to ensure that  HTTPS only is enabled for  server/service authentication and protects data in transit from network layer eavesdropping attacks. Please note Append does not enforce compliance use then deny.",
  "metadata": {
   "version": "1.0.0",
   "category": "App Service",
   "createdBy": "addbcd7b-cb6c-48dd-bbad-299f56b0affe",
   "createdOn": "2021-10-08T16:46:54.6996687Z",
   "updatedBy": null,
   "updatedOn": null
  },
  "parameters": {
   "effect": {
    "type": "String",
    "metadata": {
     "displayName": "Effect",
     "description": "Enable or disable the execution of the policy"
    },
    "allowedValues": [
     "Append",
     "Disabled"
    ],
    "defaultValue": "Append"
   }
  },
  "policyRule": {
   "if": {
    "allOf": [
     {
      "field": "type",
      "equals": "Microsoft.Web/sites"
     },
     {
      "field": "Microsoft.Web/sites/httpsOnly",
      "notequals": true
     }
    ]
   },
   "then": {
    "effect": "[parameters('effect')]",
    "details": [
     {
      "field": "Microsoft.Web/sites/httpsOnly",
      "value": true
     }
    ]
   }
  }
 },
 "id": "/providers/Microsoft.Management/managementGroups/PLR/providers/Microsoft.Authorization/policyDefinitions/Append-AppService-httpsonly",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "Append-AppService-httpsonly"
}